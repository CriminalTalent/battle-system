{
  "name": "battle-system",
  "version": "1.0.0",
  "description": "Real-time multiplayer turn-based battle system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=battle-api\" \"npm run dev --workspace=battle-web\"",
    "start": "concurrently \"npm run start --workspace=battle-api\" \"npm run start --workspace=battle-web\"",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/*/src/**/*.{js,jsx}",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf packages/*/node_modules packages/*/build packages/*/dist node_modules",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/battle-system.git"
  },
  "keywords": [
    "battle",
    "game",
    "realtime",
    "multiplayer",
    "react",
    "nodejs",
    "socket.io",
    "turn-based"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT"
}