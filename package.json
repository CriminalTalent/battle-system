{
  "name": "battle-system",
  "version": "2.0.0",
  "description": "실시간 멀티플레이어 턴제 전투 시스템 (Express + Socket.IO)",
  "private": true,
  "workspaces": ["packages/battle-server"],
  "scripts": {
    "setup": "npm install",
    "dev": "npm --workspace packages/battle-server run dev",
    "start": "npm --workspace packages/battle-server run start",
    "pm2:start": "pm2 start ecosystem.config.js --only battle-server --sticky && pm2 save",
    "pm2:restart": "pm2 restart battle-server --update-env",
    "pm2:stop": "pm2 stop battle-server",
    "pm2:logs": "pm2 logs battle-server",
    "pm2:status": "pm2 status",
    "health": "curl -fsS http://127.0.0.1:3001/api/health || echo 'Server not running'",
    "lint": "eslint \"packages/battle-server/src/**/*.js\" \"packages/battle-server/*.js\"",
    "lint:fix": "eslint \"packages/battle-server/src/**/*.js\" \"packages/battle-server/*.js\" --fix",
    "format": "prettier --write \"packages/battle-server/**/*.{js,json,md}\"",
    "clean": "rimraf node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CriminalTalent/battle-system.git"
  },
  "keywords": [
    "battle-system",
    "socket.io",
    "express",
    "turn-based",
    "realtime",
    "multiplayer",
    "pvp",
    "korean",
    "pm2"
  ],
  "author": {
    "name": "CriminalTalent",
    "email": "rntjdrud1@gmail.com",
    "url": "https://github.com/CriminalTalent"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CriminalTalent/battle-system/issues"
  },
  "homepage": "https://github.com/CriminalTalent/battle-system#readme"
}
