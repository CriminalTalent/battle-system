{
  "name": "battle-system",
  "version": "1.0.0",
  "description": "Real-time multiplayer turn-based battle system",
  "private": true,
  "workspaces": [
    "packages/battle-api",
    "packages/battle-web"
  ],
  "scripts": {
    "dev": "concurrently \"npm --workspace packages/battle-api run dev\" \"npm --workspace packages/battle-web start\"",
    "start": "concurrently \"npm --workspace packages/battle-api start\" \"npm --workspace packages/battle-web start\"",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint \"packages/*/src/**/*.{js,jsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"packages/*/src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rimraf packages/*/node_modules packages/*/build packages/*/dist node_modules",
    
    // 추가 스크립트
    "setup": "npm install && npm install --workspaces",
    "dev:api": "npm --workspace packages/battle-api run dev",
    "dev:web": "npm --workspace packages/battle-web run dev",
    "start:api": "npm --workspace packages/battle-api start",
    "start:web": "npm --workspace packages/battle-web start",
    
    // Docker 관련
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    
    // 유틸리티
    "quick-start": "chmod +x scripts/quick-start.sh && ./scripts/quick-start.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CriminalTalent/battle-system.git"
  },
  "keywords": [
    "battle",
    "game",
    "realtime",
    "multiplayer",
    "react",
    "nodejs",
    "socket.io",
    "turn-based"
  ],
  "author": "CriminalTalent",
  "license": "MIT"
}
