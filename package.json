{
  "name": "battle-system",
  "version": "1.0.1",
  "private": true,
  "description": "PYXIS 실시간 턴제 전투 시스템",
  "main": "packages/battle-server/index.js",
  "engines": {
    "node": ">=18.17",
    "npm": ">=9"
  },
  "scripts": {
    "dev": "dotenv -e .env -- nodemon --watch packages/battle-server --ext js,json packages/battle-server/index.js",
    "start": "dotenv -e .env -- node packages/battle-server/index.js",
    "start:prod": "cross-env NODE_ENV=production dotenv -e .env -- node packages/battle-server/index.js",
    "pm2:start": "pm2 start ecosystem.config.js --name battle-system --env production",
    "pm2:reload": "pm2 reload battle-system",
    "pm2:restart": "pm2 restart battle-system",
    "pm2:stop": "pm2 stop battle-system",
    "pm2:logs": "pm2 logs battle-system",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "health": "curl -fsS http://127.0.0.1:3001/healthz || exit 1",
    "clean": "rimraf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "turn-based",
    "battle",
    "realtime",
    "multiplayer",
    "pyxis"
  ],
  "author": "CriminalTalent",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.4.2",
    "rimraf": "^5.0.5"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "logs",
      "tmp"
    ],
    "delay": "150ms"
  }
}
