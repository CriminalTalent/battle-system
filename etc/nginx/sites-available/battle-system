server {
    listen 80;
    server_name pyxisbattlesystem.monster;

    # SSL로 리다이렉트
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name pyxisbattlesystem.monster;

    # SSL 인증서 (Certbot이 자동으로 채워줌)
    ssl_certificate /etc/letsencrypt/live/pyxisbattlesystem.monster/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pyxisbattlesystem.monster/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # 정적 파일 (Node 서버의 public 디렉토리)
    root /root/battle-system/packages/battle-server/public;
    index index.html;

    # ✅ 확장자 없는 경로 매핑 추가
    location = /admin {
        try_files /admin.html =404;
    }

    location = /play {
        try_files /play.html =404;
    }

    location = /watch {
        try_files /watch.html =404;
    }

    # 정적 파일 캐싱
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # API 프록시
    location /api/ {
        proxy_pass http://127.0.0.1:3001/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
    }

    # WebSocket 프록시
    location /socket.io/ {
        proxy_pass http://127.0.0.1:3001/socket.io/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }
}
