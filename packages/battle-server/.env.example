# ================================================
# PYXIS Battle System - 환경변수 설정
# ================================================

# 서버 설정
NODE_ENV=production
HOST=0.0.0.0
PORT=3001

# CORS 설정 (콤마로 구분하여 여러 도메인 허용)
CORS_ORIGIN=https://pyxisbattlesystem.monster,http://65.21.147.119:3001

# Socket.IO 설정
SOCKET_PATH=/socket.io
SOCKET_TIMEOUT=60000
MAX_CONNECTIONS=1000

# 로그 설정
LOG_LEVEL=info
LOG_FILE_SIZE=10MB
LOG_MAX_FILES=5

# 업로드 설정
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# 보안 설정
OTP_EXPIRE_TIME=1800000
MAX_PLAYERS_PER_BATTLE=8
MAX_SPECTATORS_PER_BATTLE=30

# 게임 설정
BATTLE_TIMEOUT=3600000
TURN_TIMEOUT=300000
MAX_STAT_TOTAL=12
MAX_STAT_INDIVIDUAL=10

# Redis 설정 (확장 시 사용)
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=

# 데이터베이스 설정 (확장 시 사용)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=pyxis_battle
# DB_USER=pyxis
# DB_PASSWORD=

# SSL 설정 (HTTPS 사용 시)
# SSL_KEY_PATH=/path/to/private.key
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_CA_PATH=/path/to/ca_bundle.crt

# 모니터링 설정
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# 개발 전용 설정
# DEBUG=*
# VERBOSE_LOGGING=true
