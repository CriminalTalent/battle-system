{
  "name": "@battle-system/server",
  "version": "2.0.0",
  "description": "Battle System API Server - 실시간 멀티플레이어 턴제 전투 시스템",
  "private": true,
  "main": "src/server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "start:single": "cross-env NODE_ENV=production node index.single.js",
    "pm2:start": "cross-env PORT=3001 NODE_ENV=production pm2 start src/server.js --name battle-server --time",
    "pm2:save": "pm2 save",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "npm install && mkdir -p logs uploads",
    "health": "curl -fsS http://127.0.0.1:${PORT:-3001}/api/health || echo 'Server not running'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "socket.io-client": "^4.7.4",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "battle-system",
    "team-battle",
    "server",
    "socket.io",
    "realtime",
    "express",
    "turn-based",
    "multiplayer",
    "korean"
  ],
  "author": {
    "name": "CriminalTalent",
    "email": "rntjdrud1@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}