{
  "name": "@battle-system/api",
  "version": "2.0.0",
  "description": "Real-time multiplayer turn-based battle system API server with agility-based initiative system",
  "main": "src/server.js",
  "private": true,
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docker:build": "docker build -t battle-api .",
    "docker:run": "docker run -p 3001:3001 battle-api",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "setup": "npm install && mkdir -p logs uploads",
    "health": "curl http://localhost:3001/api/health || echo 'Server not running'",
    "clean": "rimraf node_modules coverage logs/*.log",
    "prestart": "npm run setup",
    "postinstall": "echo 'Battle API dependencies installed successfully'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "uuid": "^9.0.1",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.4.5",
    "lodash": "^4.17.21",
    "multer": "^1.4.5",
    "path": "^0.12.7",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.57.0",
    "eslint-config-node": "^4.1.0",
    "socket.io-client": "^4.7.4",
    "rimraf": "^5.0.5"
  },
  "optionalDependencies": {
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.13",
    "joi": "^17.12.2",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "pm2": "^5.3.0"
  },
  "keywords": [
    "battle-system",
    "team-battle", 
    "api",
    "socket.io",
    "realtime",
    "express",
    "turn-based",
    "initiative",
    "agility-based",
    "dice-rolling",
    "pvp",
    "multiplayer",
    "korean",
    "websocket",
    "game-engine"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CriminalTalent/battle-system.git",
    "directory": "packages/battle-api"
  },
  "bugs": {
    "url": "https://github.com/CriminalTalent/battle-system/issues"
  },
  "homepage": "https://github.com/CriminalTalent/battle-system/tree/main/packages/battle-api#readme",
  "author": {
    "name": "CriminalTalent",
    "email": "contact@example.com",
    "url": "https://github.com/CriminalTalent"
  },
  "contributors": [
    {
      "name": "Battle System Team",
      "email": "team@example.com"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "port": 3001,
    "host": "0.0.0.0",
    "env": "development"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json-summary"],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/*.test.js",
      "**/src/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": ["eslint:recommended"],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "commonjs"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error",
      "eqeqeq": ["error", "always"],
      "curly": ["error", "all"]
    }
  },
  "nodemonConfig": {
    "watch": ["src/"],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js", 
      "src/**/*.spec.js",
      "logs/", 
      "coverage/",
      "uploads/",
      "node_modules/"
    ],
    "env": {
      "NODE_ENV": "development",
      "DEBUG": "battle:*"
    },
    "delay": "1000"
  },
  "files": [
    "src/",
    "package.json",
    "README.md",
    "Dockerfile",
    ".dockerignore",
    "ecosystem.config.js"
  ],
  "directories": {
    "lib": "./src",
    "test": "./tests"
  },
  "workspaces": {
    "nohoist": [
      "**/socket.io",
      "**/socket.io/**"
    ]
  }
}
