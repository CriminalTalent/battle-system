{
  "name": "@battle-system/server",
  "version": "2.0.0",
  "description": "Battle System API Server - 실시간 멀티플레이어 턴제 전투 시스템",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "pm2:start": "PORT=3001 NODE_ENV=production pm2 start index.js --name battle-server --time",
    "pm2:reload": "pm2 reload battle-server --update-env",
    "pm2:save": "pm2 save",
    "setup": "mkdir -p logs uploads",
    "health": "curl -fsS http://127.0.0.1:${PORT:-3001}/healthz || echo 'Server not running'"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  },
  "author": {
    "name": "CriminalTalent",
    "email": "rntjdrud1@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
