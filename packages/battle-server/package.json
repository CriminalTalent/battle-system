{
  "name": "@battle-system/server",
  "version": "3.0.1",
  "description": "PYXIS Battle System - 실시간 턴제 전투 시스템 (개선 패키지 설정)",
  "private": true,
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js --watch src --watch public",
    "debug": "cross-env NODE_ENV=development node --inspect=0.0.0.0:9229 index.js",
    "pm2:start": "cross-env NODE_ENV=production pm2 start ../../ecosystem.config.js --only battle-server --env production",
    "pm2:dev": "cross-env NODE_ENV=development pm2 start ../../ecosystem.config.js --only battle-server --env development --watch",
    "pm2:reload": "pm2 reload battle-server --update-env",
    "pm2:stop": "pm2 stop battle-server",
    "pm2:logs": "pm2 logs battle-server --lines 50",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "setup": "node -e \"const fs=require('fs');['logs','uploads','public/uploads'].forEach(d=>fs.mkdirSync(d,{recursive:true}))\"",
    "health": "curl -fsS http://127.0.0.1:${PORT:-3001}/api/health || echo \"Server not running\"",
    "test": "echo \"Tests not implemented yet\" && exit 0",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "clean": "rimraf uploads/** logs/** node_modules/.cache"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.3",
    "pm2": "^5.3.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CriminalTalent/battle-system.git"
  },
  "keywords": [
    "battle-system",
    "realtime",
    "multiplayer",
    "turn-based",
    "pvp",
    "socket.io",
    "express",
    "korean",
    "game",
    "pyxis"
  },
  "author": {
    "name": "CriminalTalent",
    "email": "rntjdrud1@gmail.com",
    "url": "https://github.com/CriminalTalent"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CriminalTalent/battle-system/issues"
  },
  "homepage": "https://github.com/CriminalTalent/battle-system#readme",
  "packageManager": "npm@10",
  "nodemonConfig": {
    "ignore": [
      "uploads/*",
      "logs/*",
      "public/uploads/*"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": "1000"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2023,
      "sourceType": "script"
    },
    "ignorePatterns": [
      "public/",
      "logs/",
      "uploads/"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "always"
  }
}
