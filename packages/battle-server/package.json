{
  "name": "@battle-system/server",
  "version": "3.0.0",
  "description": "PYXIS Battle System - 실시간 턴제 전투 시스템 (완전 개선 버전)",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js --watch src --watch public",
    "debug": "NODE_ENV=development node --inspect index.js",
    "pm2:start": "NODE_ENV=production pm2 start ecosystem.config.js",
    "pm2:dev": "NODE_ENV=development pm2 start ecosystem.config.js --watch",
    "pm2:reload": "pm2 reload battle-system --update-env",
    "pm2:stop": "pm2 stop battle-system",
    "pm2:logs": "pm2 logs battle-system --lines 50",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "setup": "mkdir -p logs uploads public/uploads",
    "health": "curl -fsS http://127.0.0.1:${PORT:-3001}/api/health || echo 'Server not running'",
    "test": "echo 'Tests not implemented yet' && exit 0",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "clean": "rm -rf uploads/* logs/* node_modules/.cache",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CriminalTalent/battle-system.git"
  },
  "keywords": [
    "battle-system",
    "realtime",
    "multiplayer",
    "turn-based",
    "pvp",
    "socket.io",
    "express",
    "korean",
    "game",
    "pyxis"
  ],
  "author": {
    "name": "CriminalTalent",
    "email": "rntjdrud1@gmail.com",
    "url": "https://github.com/CriminalTalent"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CriminalTalent/battle-system/issues"
  },
  "homepage": "https://github.com/CriminalTalent/battle-system#readme",
  "nodemonConfig": {
    "ignore": ["uploads/*", "logs/*", "public/uploads/*"],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}
