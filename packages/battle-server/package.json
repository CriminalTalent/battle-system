{
  "name": "@battle-system/server",
  "version": "3.0.1",
  "description": "PYXIS Battle System - 실시간 턴제 전투 시스템",
  "private": true,
  "type": "module",                    
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js --watch src --watch public",
    "debug": "cross-env NODE_ENV=development node --inspect=0.0.0.0:9229 index.js",
    "pm2:start": "cross-env NODE_ENV=production pm2 start ../../ecosystem.config.js --only battle-server --env production",
    "pm2:dev": "cross-env NODE_ENV=development pm2 start ../../ecosystem.config.js --only battle-server --env development --watch",
    "pm2:reload": "pm2 reload battle-server --update-env",
    "pm2:stop": "pm2 stop battle-server",
    "pm2:logs": "pm2 logs battle-server --lines 50",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "setup": "node -e \"const fs=require('fs');['logs','uploads','public/uploads'].forEach(d=>fs.mkdirSync(d,{recursive:true}))\"",
    "health": "curl -fsS http://127.0.0.1:${PORT:-3001}/api/health || echo \"Server not running\"",
    "test": "echo \"Tests not implemented yet\" && exit 0",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "clean": "rimraf uploads/** logs/** node_modules/.cache"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.3",
    "pm2": "^5.3.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "engines": { "node": ">=18.0.0", "npm": ">=8.0.0" }
}