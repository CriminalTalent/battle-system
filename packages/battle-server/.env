# 서버 설정
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# CORS 설정
CORS_ORIGIN=*

# JWT 시크릿 (변경 필요!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 정리 간격 (밀리초)
CLEANUP_INTERVAL=1800000

# 로그 레벨
LOG_LEVEL=info

# 파일 업로드 설정
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# 전투 설정
BATTLE_TURN_TIMEOUT=300000
MAX_PLAYERS_PER_BATTLE=8
TOKEN_EXPIRY_PARTICIPANT=1h
TOKEN_EXPIRY_SPECTATOR=24h
