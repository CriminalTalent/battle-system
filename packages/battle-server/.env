# ================================================
# PYXIS Battle System - 환경변수 설정 (권장값)
# ================================================

# 서버
NODE_ENV=production
HOST=0.0.0.0
PORT=3001

# CORS (필요한 출처만)
CORS_ORIGIN=https://pyxisbattlesystem.monster,http://65.21.147.119:3001

# Socket.IO
SOCKET_PATH=/socket.io
SOCKET_TIMEOUT=60000
MAX_CONNECTIONS=1000

# 로그
LOG_LEVEL=info
LOG_FILE_SIZE=10MB
LOG_MAX_FILES=5

# 업로드
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# 보안/인원
OTP_EXPIRE_TIME=1800000           # 30분
MAX_PLAYERS_PER_BATTLE=8
MAX_SPECTATORS_PER_BATTLE=30

# 게임 (참고: 현 코드에선 미사용)
BATTLE_TIMEOUT=3600000
TURN_TIMEOUT=300000
MAX_STAT_TOTAL=12                 # (미사용, 남겨도 무방)
MAX_STAT_INDIVIDUAL=5             # ← 규칙과 일치하도록 5로 수정

# Redis/DB/SSL (필요 시)
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=pyxis_battle
# DB_USER=pyxis
# DB_PASSWORD=
# SSL_KEY_PATH=/path/to/private.key
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_CA_PATH=/path/to/ca_bundle.crt

# 모니터링
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# 개발
# DEBUG=*
# VERBOSE_LOGGING=true
