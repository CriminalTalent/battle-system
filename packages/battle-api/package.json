{
  "name": "battle-api",
  "version": "2.0.0",
  "description": "Team Battle System API Server - 민첩성 기반 선후공 시스템",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docker:build": "docker build -t battle-api .",
    "docker:run": "docker run -p 3001:3001 battle-api",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "setup": "npm install && mkdir -p logs",
    "health": "curl http://localhost:3001/api/health || echo 'Server not running'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "uuid": "^9.0.1",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.4.5",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.57.0",
    "eslint-config-node": "^4.1.0",
    "socket.io-client": "^4.7.4"
  },
  "optionalDependencies": {
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.13",
    "joi": "^17.12.2",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0"
  },
  "keywords": [
    "battle",
    "team-battle", 
    "api",
    "socket.io",
    "realtime",
    "express",
    "turn-based",
    "initiative",
    "agility",
    "pvp",
    "multiplayer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CriminalTalent/battle-system.git"
  },
  "bugs": {
    "url": "https://github.com/CriminalTalent/battle-system/issues"
  },
  "homepage": "https://github.com/CriminalTalent/battle-system#readme",
  "author": {
    "name": "CriminalTalent",
    "email": "contact@example.com"
  },
  "contributors": [
    {
      "name": "Battle System Team",
      "email": "team@example.com"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "port": 3001,
    "host": "0.0.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/src/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "extends": ["eslint:recommended"],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
  },
  "nodemonConfig": {
    "watch": ["src/"],
    "ext": "js,json",
    "ignore": ["src/**/*.test.js", "logs/", "coverage/"],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "files": [
    "src/",
    "package.json",
    "README.md",
    "Dockerfile",
    ".dockerignore"
  ]
}
