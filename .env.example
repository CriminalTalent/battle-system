# Battle System Environment Configuration

# ===========================================
# API Server Configuration
# ===========================================

# Server Port
PORT=3001

# Environment (development, production, test)
NODE_ENV=development

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Origins (comma separated for multiple origins)
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Redis Configuration
# ===========================================

# Redis Connection URL
REDIS_URL=redis://localhost:6379

# Redis Password (if required)
# REDIS_PASSWORD=your-redis-password

# ===========================================
# Battle Configuration
# ===========================================

# Turn timeout in seconds (default: 30)
BATTLE_TURN_TIMEOUT=30

# Maximum players per battle (default: 2)
MAX_PLAYERS_PER_BATTLE=2

# Maximum spectators per battle (default: 10)
MAX_SPECTATORS_PER_BATTLE=10

# Battle timeout in minutes (auto-end inactive battles)
BATTLE_TIMEOUT=60

# ===========================================
# Token Configuration
# ===========================================

# Participant token expiry (1h, 2d, etc.)
TOKEN_EXPIRY_PARTICIPANT=1h

# Spectator token expiry (longer for reuse)
TOKEN_EXPIRY_SPECTATOR=24h

# Token cleanup interval in minutes
TOKEN_CLEANUP_INTERVAL=60

# ===========================================
# Game Balance Configuration
# ===========================================

# Base damage range
MIN_DAMAGE=10
MAX_DAMAGE=20

# Critical hit chance (0.0 - 1.0)
CRITICAL_CHANCE=0.1

# Critical hit multiplier
CRITICAL_MULTIPLIER=2.0

# Defense damage reduction (0.0 - 1.0)
DEFENSE_REDUCTION=0.5

# Starting HP
STARTING_HP=100

# ===========================================
# Logging Configuration
# ===========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Enable battle event logging
ENABLE_BATTLE_LOGGING=true

# ===========================================
# Rate Limiting
# ===========================================

# Requests per minute per IP
RATE_LIMIT_RPM=100

# Battle creation limit per IP per hour
BATTLE_CREATION_LIMIT=10

# Action rate limit per player per minute
ACTION_RATE_LIMIT=60

# ===========================================
# Frontend Configuration (React)
# ===========================================

# API URL for React app
REACT_APP_API_URL=http://localhost:3001

# Socket.IO URL for React app
REACT_APP_SOCKET_URL=http://localhost:3001

# Enable development tools
REACT_APP_DEV_TOOLS=true

# Enable debug mode
REACT_APP_DEBUG=false

# Disable source maps in production
GENERATE_SOURCEMAP=false

# ===========================================
# Security Configuration
# ===========================================

# Enable HTTPS redirect
FORCE_HTTPS=false

# Session secret
SESSION_SECRET=your-session-secret-change-this

# Cookie security settings
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ===========================================
# Monitoring & Analytics (Optional)
# ===========================================

# Sentry DSN for error tracking
# SENTRY_DSN=your-sentry-dsn

# Google Analytics ID
# REACT_APP_GA_ID=your-ga-id

# ===========================================
# Database Configuration (Future)
# ===========================================

# Database URL (for future persistent storage)
# DATABASE_URL=postgresql://user:pass@localhost:5432/battle_system

# Database pool size
# DB_POOL_SIZE=10
